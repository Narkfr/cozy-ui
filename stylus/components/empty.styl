@require '../settings/breakpoints'

$empty
    display          flex
    flex-direction   column
    justify-content  center
    flex             1 0 auto
    align-self       center
    padding          1em 0
    text-align       center

    &:before
        content              ''
        display              block
        margin               0 auto
        width                em(160px)
        height               em(140px)
        background-position  center center
        background-repeat    no-repeat
        background-size      contain

    h2
        font-size(24px)
        margin          em(33px) auto 0
        line-height     1.3
        color           charcoal-grey
        letter-spacing  -.2px
    p
        margin-top   em(5px)
        color        cool-grey
        line-height  1.5

    +medium-screen()
        &:before
            width   em(120px)
            height  em(105px)
        h2
            margin  em(33px) 1.5em 0
        p
            margin  em(5px) 1.5em 0
